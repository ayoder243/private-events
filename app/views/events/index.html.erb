<%= render "nav" %>

<h1>Events</h1>

<h2>Upcoming Events</h2>
<ul>
<% @events.upcoming.each do |event| %>
    <li><%= event.date %> - <% event.location %>
    <% if user_signed_in? %>
        <%= link_to "Attend Event", event_attendees_path(event_attendee_id: current_user.id, attended_event_id: event.id), data: { turbo_method: :post } %></li>
    <% end %>
<% end %>
</ul>

<h2>Past Events</h2>
<ul>
<% @events.past.each do |event| %>
    <li><%= event.date %> - <% event.location %>
    <% if user_signed_in? %>
        <%= link_to "Attend Event", event_attendees_path(event_attendee_id: current_user.id, attended_event_id: event.id), data: { turbo_method: :post } %></li>
    <% end %>
<% end %>
</ul>

<%= link_to "New Event", new_event_path %>